{
    "name": "waloucorp_launcher",
    "preductname": "WalouCorp Launcher",
    "version": "2.0.0",
    "description": "Launcher Minecraft pour le serveur Minecraft Cobblemon Night-Watch",
    "main": "src/app.js",
    "author": {
        "name": "Luuxis, WalouCorp Development Team",
        "email": "contact@walou.corp",
        "url": "https://github.com/Walou-Corp-Development-Team"
    },
    "url": "http://play.night-watch.fr",
    "scripts": {
        "start": "cross-env-shell NODE_ENV=dev electron .",
        "dev": "cross-env-shell DEV_TOOL=open nodemon --exec bun start",
        "build": "node build.js --obf=true --build=platform",
        "icon": "node build.js --icon=https://raw.githubusercontent.com/Walou41/Icone/refs/heads/main/Logo%20WC.png"
    },
    "license": "CCANC",
    "nodemonConfig": {
        "ext": "js,html,css",
        "ignore": "**/test"
    },
    "dependencies": {
        "electron-updater": "^6.6.2",
        "minecraft-java-core": "^4.2.1",
        "node-bdd": "^2.0.4",
        "node-fetch": "^3.3.2",
        "xml-js": "^1.6.11"
    },
    "devDependencies": {
        "cross-env": "^10.1.0",
        "electron": "^38.3.0",
        "electron-builder": "^26.0.12",
        "javascript-obfuscator": "^4.1.1",
        "jimp": "^1.6.0",
        "nodemon": "^3.1.10",
        "png2icons": "^2.0.1"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Walou-Corp-Development-Team/New-WC-Launcher.git"
    }
}
